<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.example.system.model">
	<class name="Item" table="item">
		<id name="i_id" column="i_id">
			<generator class="identity"></generator><!--采用主键自增长方式 -->
		</id>
		<property name="i_content" column="i_content" /><!-- 这里的column值对应数据库中的属性名；如果没有column值，默认等于属性名 -->
		<property name="v_title" column="v_title" /><!-- 这里的column值对应数据库中的属性名；如果没有column值，默认等于属性名 -->		
		<property name="v_id" column="v_id" />
		<property name="u_no" column="u_no" />
		<property name="i_num" column="i_num" />
		
	</class>
</hibernate-mapping>
